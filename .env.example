# Application Configuration
APP_NAME="Electric Vehicle Analysis API"
VERSION="1.0.0"
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ev_analysis"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# MLflow Configuration
MLFLOW_TRACKING_URI="http://localhost:5000"
MLFLOW_EXPERIMENT_NAME="ev_analysis"

# Security
SECRET_KEY="your-super-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=10080
ALLOWED_HOSTS="*"

# CORS Configuration
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000"

# File Paths
DATA_PATH="./data"
MODEL_PATH="./models"
UPLOAD_PATH="./uploads"

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"

# External Services
SENTRY_DSN=""
MONITORING_ENABLED=true

# Model Training Configuration
DEFAULT_TEST_SIZE=0.2
DEFAULT_CV_FOLDS=5
MAX_TRAINING_TIME=3600

# Data Processing
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES="csv,json,xlsx"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Caching
CACHE_TTL=3600
ENABLE_REDIS_CACHE=true

# Feature Flags
ENABLE_MODEL_TRAINING=true
ENABLE_BATCH_PREDICTION=true
ENABLE_REAL_TIME_PREDICTION=true

# Deployment
ENVIRONMENT="development"
DEPLOYMENT_TARGET="local"

# Monitoring & Observability
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=false
ELASTICSEARCH_URL=""

# Email Configuration (for notifications)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM=""

# Slack Notifications
SLACK_WEBHOOK_URL=""
SLACK_CHANNEL="#alerts"

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_DEFAULT_REGION="us-west-2"
S3_BUCKET_NAME=""

# Google Cloud Configuration (if using GCP)
GOOGLE_APPLICATION_CREDENTIALS=""
GCP_PROJECT_ID=""
GCS_BUCKET_NAME=""

# Azure Configuration (if using Azure)
AZURE_STORAGE_CONNECTION_STRING=""
AZURE_CONTAINER_NAME=""